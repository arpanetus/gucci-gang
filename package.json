{
  "name": "grand-stack-starter-api",
  "version": "0.0.1",
  "description": "API app for GRANDstack",
  "main": "src/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start-dev": "./node_modules/.bin/nodemon --watch src --ext js,graphql --exec babel-node  src/index.js",
    "build": "babel src -d build && shx cp .env build && shx cp src/seed/schema.graphql build",
    "now-build": "babel src -d build && shx cp .env build && shx cp src/seed/schema.graphql build",
    "watch": "npm run build && node build/index.js",
    "populate": "./node_modules/.bin/babel-node src/seed/seed-db.js",
    "populog": "./node_modules/.bin/babel-node src/seed/seed-log.js",
    "post-config": "./node_modules/.bin/babel-node src/post-config.js"
  },
  "license": "MIT",
  "dependencies": {
    "apollo-boost": "^0.3.1",
    "apollo-cache-inmemory": "^1.6.3",
    "apollo-client": "^2.6.4",
    "apollo-link-http": "^1.5.15",
    "apollo-server": "^2.8.2",
    "apollo-server-express": "^2.13.0",
    "dotenv": "^7.0.0",
    "express": "^4.17.1",
    "graphql-tag": "^2.10.1",
    "neo4j-driver": "^4.0.2",
    "neo4j-graphql-js": "^2.14.0",
    "node-fetch": "^2.6.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.9.6",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-preset-env": "^1.7.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.2.1",
    "nodemon": "^1.19.1",
    "shx": "^0.3.2",
    "uuid": "^8.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,graphql": [
      "prettier --write",
      "git add"
    ]
  }
}
